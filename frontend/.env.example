# Environment Configuration
# Copy this file to .env.local for local development

# Application Environment
# Options: development, staging, production
VITE_APP_ENV=development

# API Base URL
# For local development, use: http://localhost:8000
# For production, use your hosted API URL
VITE_API_BASE_URL=http://localhost:8000

# GitHub Pages Configuration
# Set to 'true' when building for GitHub Pages deployment
VITE_GITHUB_PAGES=false

# Repository name (for GitHub Pages base path)
VITE_REPO_NAME=news_bias_analyzer

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# Optional: API Key (if your backend requires authentication)
# VITE_API_KEY=your_api_key_here